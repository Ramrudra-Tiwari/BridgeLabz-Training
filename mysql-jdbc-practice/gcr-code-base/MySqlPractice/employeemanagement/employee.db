/*
Exercise 1: Simple CRUD Application
Create a console-based Employee Management System with:
• Add employee
• View all employees
• Update employee salary
• Delete employee
• Search employee by name
*/

--Task 0 [CREATE DATABASE]

CREATE DATABASE employee;
USE employee;

CREATE TABLE Employee(
    Emp_id INT AUTO_INCREMENT PRIMARY KEY,
    Emp_name VARCHAR(50) NOT NULL,
    Department VARCHAR(50) NOT NULL,
    Emp_salary DECIMAL(10,2)
    );


-- Task 1 [Add employee]

INSERT INTO Employee(Emp_name, Department, Emp_salary)
    VALUES ('Alice', 'HR', 200000),
            ('Ravi', 'IT', 499999),
            ('allu', 'Managing Director', 99000000);


-- Task 2 [View all employees]

SELECT * FROM Employee;

/*Output Strucutre
+--------+----------+-------------------+-------------+
| Emp_id | Emp_name | Department        | Emp_salary  |
+--------+----------+-------------------+-------------+
|      1 | Alice    | HR                |   200000.00 |
|      2 | Ravi     | IT                |   499999.00 |
|      3 | allu     | Managing Director | 99000000.00 |
+--------+----------+-------------------+-------------+
*/

-- Task 3 [Update employee salary]

UPDATE Employee
SET Emp_salary = 6000
WHERE Emp_name = 'alice';

SELECT * FROM Employee;

/*Output Strucutre
+--------+----------+-------------------+-------------+
| Emp_id | Emp_name | Department        | Emp_salary  |
+--------+----------+-------------------+-------------+
|      1 | Alice    | HR                |     6000.00 |
|      2 | Ravi     | IT                |   499999.00 |
|      3 | allu     | Managing Director | 99000000.00 |
+--------+----------+-------------------+-------------+
*/

-- Task 4 [Delete employee]

DELETE FROM Employee
WHERE Emp_name = 'alice';

SELECT * FROM Employee;

/*Output Strucutre
+--------+----------+-------------------+-------------+
| Emp_id | Emp_name | Department        | Emp_salary  |
+--------+----------+-------------------+-------------+
|      2 | Ravi     | IT                |   499999.00 |
|      3 | allu     | Managing Director | 99000000.00 |
+--------+----------+-------------------+-------------+
*/

-- Task 5 [Search employee by name]

SELECT * FROM Employee
WHERE Emp_name = 'allu';

